<p>Role: Stakeholder Team {{#if isLead}}Lead{{else}}Member{{/if}}</p>
{{#if isLead}}
<div class='round' id='collaboration'>
    <div>Votes remaining: <span id='votes' class='highlight resources'>{{teamObj.votes}}</span></div>
    <table><tbody>
        {{#each mainTeams}}
        {{#if isMyTeam}}{{else}}
        <tr><td>{{id}}</td><td>{{title}}</td><td><input class='voteVal' id='voteVal_{{id}}' style='width: 40px;' oninput='validateVote(this)' type='number' value='0'><button class='buttonVote' id='buttonVote_{{id}}'>Submit</button></td></tr>
        {{/if}}
        {{/each}}
    </tbody></table>
</div>

<div class='round' id='allocation'>
    <select id='actionSelect'>
    <option value=''>Select an option...</option>
    {{#each actions}}
        <option value='{{this}}'>{{this}}</option>
    {{/each}}
    </select>
    <br>
    <div id="input-container">
        <textarea id='actionDesc' placeholder="Add description here..."></textarea>
    </div>
    <br>
    Assign a value: <input class='allocateVal' id='allocateVal' style='width: 40px;' oninput='validateAllocation(this)' type='number'>
    <button class='buttonAllocate' id='buttonAllocate'>Submit</button>
</div>
{{/if}}

<script>
    setupStakeholder();
</script>
